---
import Styles from '../components/Styles.svelte'
import Navbar from '../components/Navbar.svelte'
import Hero from '../components/Hero.svelte'
import ListStages from '../components/ListStages.svelte'
import Elementor from '../components/Elementor.svelte'
import Tags from '../components/Tags.svelte'
import LoginForm from '../components/LoginForm.svelte'
import Toast from '../components/Toast.svelte'
import BillingService from '../services/Billing.svelte'

---
<html>
  <head>
    <Tags />
    <Styles />    
  </head>
  <body>

    <Navbar client:idle  />
    <div class="homepage">
      <Hero />
      <ListStages client:visible />
      <Elementor client:visible />
      <LoginForm client:load />
    </div>
    <Toast client:idle />
    <BillingService client:idle />
  </body>
</html>
